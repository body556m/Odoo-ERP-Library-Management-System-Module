<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Authors Report -->
    <record id="action_report_authors" model="ir.actions.report">
        <field name="name">Author Profile Report</field>
        <field name="model">library.author</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library.report_authors_template</field>
        <field name="binding_model_id" ref="model_library_author"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_authors_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-family: 'Inter', sans-serif; color: #334155; page-break-after: always;">
                        <div class="row mb-5 align-items-center" style="border-bottom: 3px solid #6366f1; padding-bottom: 20px;">
                            <div class="col-8">
                                <h2 style="color: #4338ca; font-weight: 800; margin-bottom: 0;">AUTHOR PROFILE</h2>
                                <h1 style="color: #1e1b4b; font-weight: 900; margin-top: 5px;"><span t-field="o.name"/></h1>
                            </div>
                            <div class="col-4 text-end">
                                <div style="background: #eef2ff; color: #4338ca; padding: 10px 20px; border-radius: 50px; display: inline-block; font-weight: 700;">
                                    <span t-field="o.book_count"/> Published Works
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <div style="padding: 20px; background: #f8fafc; border-radius: 12px; border-left: 5px solid #6366f1;">
                                    <div class="text-muted small text-uppercase">Birth Date</div>
                                    <div style="font-size: 1.2rem; font-weight: 600;" t-field="o.date_of_birth" t-options='{"widget": "date"}'/>
                                </div>
                            </div>
                            <div class="col-6 text-end">
                                <div style="display: inline-block; padding: 15px; background: #f1f5f9; border-radius: 10px;">
                                    <strong class="text-muted small text-uppercase d-block mb-1">Generated Date</strong>
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B %d, %Y')"/>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5">
                            <h3 style="color: #1e293b; font-weight: 700; border-left: 4px solid #6366f1; padding-left: 15px; margin-bottom: 20px;">Library Bibliography</h3>
                            <table class="table table-sm table-hover" style="border: 1px solid #e2e8f0; border-radius: 8px; overflow: hidden;">
                                <thead style="background: #f1f5f9; color: #475569;">
                                    <tr>
                                        <th style="padding: 12px;">Book Title</th>
                                        <th style="padding: 12px;" class="text-center">Category</th>
                                        <th style="padding: 12px;" class="text-center">Published Year</th>
                                        <th style="padding: 12px;" class="text-end">Pages</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.book_ids" t-as="book">
                                        <tr>
                                            <td style="padding: 10px;"><strong><span t-field="book.title"/></strong></td>
                                            <td style="padding: 10px;" class="text-center"><span t-field="book.category_id"/></td>
                                            <td style="padding: 10px;" class="text-center"><span t-esc="book.published_date.year if book.published_date else 'N/A'"/></td>
                                            <td style="padding: 10px;" class="text-end"><span t-field="book.pages"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Footer Note -->
                        <div class="mt-5 pt-4 border-top text-center text-muted small">
                            <p>This document is an official export from the Library Management System.</p>
                            <p>&#169; <span t-esc="context_timestamp(datetime.datetime.now()).year"/> Library Admin</p>
                        </div>
                    </div>
            </t>
        </t>
    </template>

    <!-- Publishers Report -->
    <record id="action_report_publishers" model="ir.actions.report">
        <field name="name">Publisher Inventory Report</field>
        <field name="model">library.publisher</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library.report_publishers_template</field>
        <field name="binding_model_id" ref="model_library_publisher"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_publishers_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-family: 'Inter', sans-serif; color: #334155; page-break-after: always;">
                        <div class="row mb-5" style="border-bottom: 4px solid #f97316; padding-bottom: 20px;">
                            <div class="col-9">
                                <h3 style="color: #ea580c; font-weight: 700; margin: 0;">PUBLISHING HOUSE</h3>
                                <h1 style="color: #7c2d12; font-weight: 900; margin-top: 5px;"><span t-field="o.name"/></h1>
                            </div>
                            <div class="col-3 text-end">
                                <div style="font-size: 0.9rem; color: #9a3412; background: #fff7ed; padding: 10px; border-radius: 8px; border: 1px solid #ffedd5;">
                                    <strong>Report Date:</strong><br/>
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B %d, %Y')"/>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h4 class="mb-4" style="color: #c2410c;">Works Portfolio</h4>
                            <table class="table table-bordered table-striped" style="border-radius: 8px; overflow: hidden; border: 1px solid #fed7aa;">
                                <thead style="background: #fb923c; color: white;">
                                    <tr>
                                        <th style="padding: 12px;">Title</th>
                                        <th style="padding: 12px;">Author</th>
                                        <th style="padding: 12px;">ISBN</th>
                                        <th style="padding: 12px;" class="text-end">Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="books" t-value="o.env['library.books'].search([('publisher_id', '=', o.id)])"/>
                                    <t t-foreach="books" t-as="book">
                                        <tr>
                                            <td style="padding: 10px;"><strong><span t-field="book.title"/></strong></td>
                                            <td style="padding: 10px;"><span t-field="book.author_id"/></td>
                                            <td style="padding: 10px;"><small class="text-muted"><span t-field="book.isbn"/></small></td>
                                            <td style="padding: 10px;" class="text-end">
                                                <span t-field="book.price" t-options='{"widget": "monetary", "display_currency": o.env.company.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr t-if="not books">
                                        <td colspan="4" class="text-center py-4 text-muted" style="background: #fffaf5;">No books recorded for this publisher.</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Footer Note -->
                        <div class="mt-5 pt-4 border-top text-center text-muted small">
                            <p>This document is an official export from the Library Management System.</p>
                            <p>&#169; <span t-esc="context_timestamp(datetime.datetime.now()).year"/> Library Admin</p>
                        </div>
                    </div>
            </t>
        </t>
    </template>
</odoo>
