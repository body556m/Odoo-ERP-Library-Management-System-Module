<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="module_category_library" model="ir.module.category">
            <field name="name">Library</field>
            <field name="description">Helps you manage your library.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_library_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_library"/>
        </record>

        <record id="group_library_librarian" model="res.groups">
            <field name="name">Librarian</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4, ref('group_library_user'))]"/>
        </record>

        <record id="group_library_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_library"/>
            <field name="implied_ids" eval="[(4, ref('group_library_librarian'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="rule_library_books_user" model="ir.rule">
            <field name="name">Library Books User Rule</field>
            <field name="model_id" ref="model_library_books"/>
            <field name="groups" eval="[(4, ref('group_library_user'))]"/>
            <field name="domain_force">[('state', '=', 'available')]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="rule_library_books_manager" model="ir.rule">
            <field name="name">Library Books Manager Rule</field>
            <field name="model_id" ref="model_library_books"/>
            <field name="groups" eval="[(4, ref('group_library_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>

</odoo>
