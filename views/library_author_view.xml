<odoo>
<record id="author_tree" model="ir.ui.view">
        <field name="name">Books Authors</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="book_ids" widget="many2many_tags"/> </tree>
        </field>
    </record>

    <record id="author_form" model="ir.ui.view">
        <field name="name">Author form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_books" type="object" class="oe_stat_button" icon="fa-book">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="book_count"/></span>
                                <span class="o_stat_text">Books</span>
                            </div>
                        </button>
                    </div>
                    <group string="Author Info">
                        <field name="name"/>
                        <field name="date_of_birth"/>
                    </group>
                    <notebook>
                        <page string="Authored Books">
                            <field name="book_ids">
                                <tree editable="bottom">
                                    <field name="title"/>
                                    <field name="isbn"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="author_search" model="ir.ui.view">
        <field name="name">Books Authors Search</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="LibraryBooksAuthors_action" model="ir.actions.act_window">
        <field name="name">Books Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="LibraryBooksAuthor_menu_item"
            name="Books Authors"
            parent="books_menu"
            action="LibraryBooksAuthors_action"
    />
</odoo>