<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_library_book_reservation_tree" model="ir.ui.view">
        <field name="name">library.book.reservation.tree</field>
        <field name="model">library.book.reservation</field>
        <field name="arch" type="xml">
            <tree string="Book Reservations" decoration-info="state == 'pending'" decoration-success="state == 'confirmed'" decoration-muted="state == 'fulfilled'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="reservation_date"/>
                <field name="expiry_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_library_book_reservation_form" model="ir.ui.view">
        <field name="name">library.book.reservation.form</field>
        <field name="model">library.book.reservation</field>
        <field name="arch" type="xml">
            <form string="Reservation">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'pending'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" invisible="state in ('cancelled', 'expired', 'fulfilled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,confirmed,fulfilled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="member_id"/>
                            <field name="book_id"/>
                        </group>
                        <group>
                            <field name="reservation_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_library_book_reservation_search" model="ir.ui.view">
        <field name="name">library.book.reservation.search</field>
        <field name="model">library.book.reservation</field>
        <field name="arch" type="xml">
            <search string="Search Reservations">
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <filter string="Active" name="active" domain="[('state', 'in', ['pending', 'confirmed'])]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <group expand="0" string="Group By">
                    <filter string="Member" name="group_member" context="{'group_by': 'member_id'}"/>
                    <filter string="Book" name="group_book" context="{'group_by': 'book_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_library_book_reservation" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="res_model">library.book.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <menuitem id="menu_library_reservation"
              name="Reservations"
              parent="library_root_menu"
              action="action_library_book_reservation"
              sequence="30"/>

</odoo>
