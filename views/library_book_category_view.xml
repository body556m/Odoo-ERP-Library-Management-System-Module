<odoo>
    <record id="library_book_category_view_form" model="ir.ui.view">
        <field name="name">library.book.category.form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="book_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_book_category_view_tree" model="ir.ui.view">
        <field name="name">library.book.category.tree</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="book_ids"/>
            </tree>
        </field>
    </record>

    <record id="action_library_book_category" model="ir.actions.act_window">
        <field name="name">Book Categories</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
    id="menu_library_book_category" 
    name="Book Categories" 
    parent="library_root_menu"
    action="action_library_book_category"
    />
</odoo>