<odoo>
    <record id="publisher_tree" model="ir.ui.view">
        <field name="name">Publishers tree</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="book_count"/>
            </tree>
        </field>
    </record>

    <record id="publisher_form" model="ir.ui.view">
        <field name="name">Publisher form</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                         <button name="%(library.LibraryBooks_action)d" type="action" class="oe_stat_button" icon="fa-book" context="{'default_publisher_id': id, 'search_default_publisher_id': id}">
                            <field name="book_count" widget="statinfo" string="Books"/>
                        </button>
                    </div>
                    <group string="Publisher INFO">
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Books" name="books">
                            <field name="book_ids">
                                <tree>
                                    <field name="title"/>
                                    <field name="author_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="publisher_search" model="ir.ui.view">
        <field name="name">publisher search</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="LibraryBooksPublisher_action" model="ir.actions.act_window">
        <field name="name">Books Publishers</field>
        <field name="res_model">library.publisher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
    id="LibraryBooksPublisher_menu_item"
    name="Books Publishers"
    parent="books_menu"
    action="LibraryBooksPublisher_action"
    />

</odoo>